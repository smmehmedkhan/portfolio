{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.21.1",
    "pnpm": ">=10.23.0"
  },
  "scripts": {
    "format": "biome format --write . && stylelint '**/*.{css,scss}' --fix",
    "lint": "biome check . && stylelint '**/*.{css,scss}'",
    "lint:fix": "biome check --fix . && stylelint '**/*.{css,scss}' --fix",
    "check": "biome ci",
    "type-check": "tsc --noEmit",
    "test": "echo 'No tests yet' && exit 0",
    "prepare": "husky",
    "docker:build": "docker build -t portfolio:latest .",
    "docker:run": "docker run -p 3000:3000 portfolio:latest",
    "docker:push": "docker push smmehmedkhan/portfolio:latest",
    "dev": "next dev",
    "build": "next build",
    "start": "next start"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "biome format --write",
      "biome check --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.555.0",
    "motion": "^12.23.25",
    "next": "^16.0.7",
    "next-themes": "^0.4.6",
    "ogl": "^1.0.11",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "baseline-browser-mapping": "^2.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-declaration-strict-value": "^1.10.11",
    "stylelint-order": "^7.0.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3"
  },
  "license": "MIT"
}
